    $('#next').click(function(e) { // 'e' 파라미터 추가
        // 선택된 체크박스의 개수 계산
        var checkedCount = $('input[type="checkbox"]:checked').length;
        
        // 선택된 체크박스가 없을 경우
        if(checkedCount < 1 ) {
            e.preventDefault(); // 이벤트 전파 중단
            alert('옵션을 최소 1개 이상 선택하세요.'); // 경고 메시지 표시
        } else if (checkedCount > 2){
          e.preventDefault(); // 이벤트 전파 중단
            alert('옵션을 2개 이하로 선택하세요.'); // 경고 메시지 표시
        }
        else {
            // 최소 1개의 옵션이 선택되었다면, 선택된 옵션 수집
            var selectedfeatures = $('input[name="feature"]:checked').map(function() {
                return this.value;
            }).get();
    
    
            // AJAX 호출
            $.ajax({
                url: '/feature',
                type: 'POST',
                data: {feature: selectedfeatures},
                success: function(response) {
                    // 서버로부터 응답이 성공적으로 오면, form6.ejs로 페이지 이동
                    window.location.href = 'form5.ejs';
                },
                error: function(xhr, status, error) {
                    // 오류 처리
                    alert("에러 발생: " + error);
                }
            });
        }
    });
});
