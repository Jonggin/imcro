<script>
  $(document).ready(function() {
    $('input[type="checkbox"][name="weight"]').change(function() {
    // 현재 체크된 체크박스 개수가 2개 이상일 경우, 가장 최근에 선택된 체크박스만 선택 상태로 유지
    if ($('input[type="checkbox"][name="weight"]:checked').length > 1) {
      // 모든 체크박스의 선택을 해제
      $('input[type="checkbox"][name="weight"]').prop('checked', false);
      // 현재 체크박스만 선택 상태로 설정
      $(this).prop('checked', true);
    }
  });
    $('#next').click(function(e) { // 'e' 파라미터 추가
        // 선택된 체크박스의 개수 계산
        var checkedCount = $('input[type="checkbox"]:checked').length;
        
        // 선택된 체크박스가 없을 경우
        if(checkedCount !== 1) {
            e.preventDefault(); // 이벤트 전파 중단
            alert('1개의 옵션을 선택하세요.'); // 경고 메시지 표시
        } else {
            // 최소 1개의 옵션이 선택되었다면, 선택된 옵션 수집
            var selectedWeight = $('input[name="weight"]:checked').val();
    
            // AJAX 호출
            $.ajax({
                url: '/weight',
                type: 'POST',
                data: {weight: selectedWeight},
                success: function(response) {
                    // 서버로부터 응답이 성공적으로 오면, form6.ejs로 페이지 이동
                    window.location.href = 'form2.ejs';
                },
                error: function(xhr, status, error) {
                    // 오류 처리
                    alert("에러 발생: " + error);
                }
            });
        }
    });
});

