    </div>
    <div class="option">
        <label><input type="checkbox" name="price" value="99,999,999"> 300만원 이상</label>
    </div>
  </div>
</div>

<div class="navigation">
  <button id="previous">이전</button>
  <button id="next">결과 보기</button>
</div>
<script>
  // JavaScript 코드가 필요하다면 여기에 작성하면 됩니다.
  $(document).ready(function() {
    $('#next').click(function(e) { // 'e' 파라미터 추가
        // 선택된 체크박스의 개수 계산
        var checkedCount = $('input[type="checkbox"]:checked').length;
        
        // 선택된 체크박스가 없을 경우
        if(checkedCount === 0) {
            e.preventDefault(); // 이벤트 전파 중단
            alert('최소 1개의 옵션을 선택하세요.'); // 경고 메시지 표시
        } else {
            // 최소 1개의 옵션이 선택되었다면, 선택된 옵션 수집
            var selectedprice = $('input[name="price"]:checked').map(function() {
                return this.value;
            }).get();
    
            // AJAX 호출
            $.ajax({
                url: '/price',
                type: 'POST',
                data: {price: selectedprice},
                success: function(response) {
                    // 서버로부터 응답이 성공적으로 오면, result.ejs로 페이지 이동
                    window.location.href = 'result.ejs';
                },
                error: function(xhr, status, error) {
                    // 오류 처리
                    alert("에러 발생: " + error);
                }
            });
        }
    });
});
