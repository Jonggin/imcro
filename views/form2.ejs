});
    $('#next').click(function(e) { // 폼의 ID를 'myForm'으로 가정
        // 각 카테고리별로 선택된 옵션의 개수 검사
        var categories = ['웹 서핑/영상 시청', '사무용', '캐주얼 게임', '공학/설계/그래픽', '사진/그래픽 편집', '고사양 게임', '빠른 프로그래밍', '영상 편집'];
        var allValid = true; // 모든 카테고리가 조건을 만족하는지 추적
        
        for (var i = 0; i < categories.length; i++) {
            var category = categories[i];
            var checkedCount = $('input[name="' + category + '"]:checked').length;
            
            // 각 카테고리에서 정확히 1개의 옵션이 선택되었는지 확인
            if (checkedCount !== 1) {
                alert(category + '에서 1개의 옵션을 선택하세요.');
                allValid = false;
                break; // 첫 번째 불만족 조건에서 중단
            }
        }
        
        // 모든 카테고리가 조건을 만족하지 않으면 폼 제출 중단
        if (!allValid) {
            e.preventDefault(); // 이벤트 전파 중단
        } else {
            // 조건을 만족하면, 선택된 데이터를 서버로 전송
            var selectedwebsurfing = $('input[name="웹 서핑/영상 시청"]:checked').val();

      var selectedoffice = $('input[name="사무용"]:checked').val();

      var selectedcasualgame = $('input[name="캐주얼 게임"]:checked').val();

      var selectedengineer = $('input[name="공학/설계/그래픽"]:checked').val();

      var selectedphoto = $('input[name="사진/그래픽 편집"]:checked').val();

      var selectedhighgame = $('input[name="고사양 게임"]:checked').val();

      var selectedprogramming = $('input[name="빠른 프로그래밍"]:checked').val();

      var selectedvideo = $('input[name="영상 편집"]:checked').val();
            // AJAX 호출 또는 폼 제출 로직을 여기에 작성
            $.ajax({
        url: '/purpose',
        type: 'POST',
        data: {
          websurfing: selectedwebsurfing,
          office: selectedoffice,
          casualgame: selectedcasualgame,
          engineer: selectedengineer,
          photo: selectedphoto,
          highgame: selectedhighgame,
          programming:selectedprogramming,
          video: selectedvideo,
        },
        success: function(response) {
    console.log("응답옴");
    // 선택된 값이 문자열 배열로 반환되므로, 배열의 첫 번째 요소를 정수로 변환
    if (selectedcasualgame === "0" && selectedhighgame === "0") {
  window.location.href = 'form4.ejs';
} else {
  window.location.href = 'form3.ejs';
}
        },
        error: function(xhr, status, error) {
          // 오류 처리
          alert("에러 발생: " + error);
        }
      });
      //ajax끝
        } //else 구문 끝
    });
});
